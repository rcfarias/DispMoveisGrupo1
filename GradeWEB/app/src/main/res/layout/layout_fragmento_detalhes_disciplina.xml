<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/consultaTextView"
        android:text="Selecione uma disciplina para mais detalhes: "
        android:textSize="20.5sp"
        android:gravity="center"/>


    <Spinner
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/lista_disciplina_spinner">
    </Spinner>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ementaTextView"
        android:text="Ementa: "
        android:textSize="20.5sp"
        android:gravity="center"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_gravity="center_horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detalhesTextView"
            android:textSize="18.5sp"/>
    </ScrollView>
</LinearLayout>