<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="top"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/lista_disciplinas_semestres_text_view"
        android:text="Disciplinas registradas"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="@color/text_color">
    </TextView>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="371dp"
        android:id="@+id/disciplinas_semestres_list_view"
        android:textSize="20sp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Adicionar disciplina"
        android:id="@+id/adicionar_disciplina_button"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/darker_gray"
        android:textColor="@color/text_color"/>


